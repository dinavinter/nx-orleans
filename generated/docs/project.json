{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "targets": {
    "noop": {
      "executor": "nx:noop",
      "outputs": ["{projectRoot}"]
    },
    "doc": {
      "executor": "@nx-net/docs:build",
      "outputs": ["{projectRoot}/_site"],
      "inputs": ["{projectRoot}/docfx.json", "{projectRoot}/references/**/*"],
      "dependsOn": [{
        "target": "doc",
        "dependencies": true
       },{
        "target": "toc",
        "dependencies": true
      }],
      "options": {
        "output": "{projectRoot}/_site",
        "inputs": ["{projectRoot}/references/**/*"],
        "config": "{projectRoot}/docfx.json",
        "build": {
          "content": ["references/**/*.{md|yml}"],
          "resource": ["**/media/**"],
          "globalMetadata": {
            "_appTitle": "NX + Net + Orleans + Docfx",
            "_appName": "NX + Net + Orleans + Docfx",
            "_appLogoPath": "images/logo.png",
            "_appFaviconPath": "images/favicon.ico",
            "_enableSearch": true,
            "_enableNewTab": true
          }
        }
      }
    },
    "toc": {
      "executor": "@nx-net/docs:toc",
      "options": {
        "input": "{projectRoot}/references",
        "output": "{projectRoot}/references",
        "verbose": true,
        "index": true
      },
      "dependsOn": [{
        "target": "doc",
        "dependencies": true
      }]
    },
    "ghpages":{
        "executor": "@nx-dotnet/nx-ghpages:deploy",
        "options": {
            "directory": "{projectRoot}/_site",
            "remote": " https://github.com/dinavinter/nx-orleans",
            "verbose": true,
        },
        "dependsOn": [{
            "target": "doc",
            "dependencies": true
        }]
        },
    "serve": {
      "command": "dotnet docfx serve"
    }
  }
}
