{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@schemaland/generated/api-types": ["generated/api-types/src/index.ts"],
      "@schemaland/net-doc-plugin": ["plugin/net-doc/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
